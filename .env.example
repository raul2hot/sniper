# ============================================
# ğŸŒ NETWORK SETTINGS
# ============================================

# Primary RPC URL (REQUIRED)
# Get a free key from:
#   - Alchemy: https://www.alchemy.com/ (recommended, 300M CU/month free)
#   - Infura: https://infura.io/ (100K requests/day free)
#   - QuickNode: https://www.quicknode.com/
RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Backup RPC URLs (comma-separated, optional)
# Used for failover if primary RPC fails
BACKUP_RPC_URLS=https://eth.llamarpc.com,https://rpc.ankr.com/eth

# Chain ID (1 = Ethereum Mainnet, 42161 = Arbitrum, 137 = Polygon)
CHAIN_ID=1

# ============================================
# ğŸ® EXECUTION MODE
# ============================================

# Options:
#   - simulation: Find opportunities, log them, but NEVER execute (safe)
#   - dry_run: Build & validate Flashbots bundles but don't submit
#   - production: Actually submit bundles to Flashbots (USES REAL FUNDS!)
EXECUTION_MODE=simulation

# Enable logging of profitable opportunities found during simulation
SIMULATION_LOG=true

# Path to save opportunity logs (JSON lines format)
SIMULATION_LOG_PATH=./logs/profitable_opportunities.log

# ============================================
# ğŸ’° PROFIT THRESHOLDS
# ============================================

# Minimum NET profit in USD to consider an opportunity
# Set to $20+ to cover:
#   - Base gas costs (~$15-30)
#   - Gas price spikes
#   - Profit margin
MIN_PROFIT_USD=20.0

# Minimum GROSS profit percentage (before gas)
# This filters out opportunities that are too tight
# 0.3% = need at least 0.3% price discrepancy
MIN_GROSS_PROFIT_PCT=0.3

# Maximum gas price in gwei
# Bot will PAUSE if gas exceeds this threshold
# 50 gwei is ~$30 for a 3-hop trade during normal times
MAX_GAS_GWEI=50

# Maximum acceptable slippage (0.005 = 0.5%)
# If price moves more than this during execution, abort
MAX_SLIPPAGE=0.005

# ============================================
# ğŸ” PATH FINDING
# ============================================

# Maximum hops in arbitrage cycle
# 3-4 is optimal: more hops = more gas + more slippage risk
MAX_HOPS=4

# Minimum liquidity in USD for a pool to be considered
# Pools with less liquidity have high slippage and manipulation risk
MIN_POOL_LIQUIDITY_USD=50000

# ============================================
# ğŸª™ TOKEN FILTERS
# ============================================

# Base tokens to START arbitrage from (high liquidity tokens)
# These are used as entry/exit points for cycles
# Format: comma-separated addresses
BASE_TOKENS=0xC02aaA39b223FE8D0A0e5C4F27eAD9083C756Cc2,0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48,0xdAC17F958D2ee523a2206206994597C13D831ec7,0x6B175474E89094C44Da98b954EedcdeCB5BE3830,0x2260FAC5E5542a773Aa44fBCfeDf7C193bc2C599

# Tokens to completely BLACKLIST (known scam/honeypot tokens)
# Format: comma-separated addresses
BLACKLISTED_TOKENS=

# Whitelist mode: If set, ONLY trade these tokens
# Leave empty to allow all non-blacklisted tokens
WHITELISTED_TOKENS=

# ============================================
# âš¡ FLASH LOAN SETTINGS
# ============================================

# Preferred flash loan provider
# Options:
#   - balancer: Balancer V2 (0% fee!) - RECOMMENDED
#   - aave: Aave V3 (0.05% fee)
#   - uniswap: Uniswap V3 flash swap
FLASH_LOAN_PROVIDER=balancer

# Maximum flash loan amount in USD
# This caps your exposure per trade
MAX_FLASH_LOAN_USD=100000

# Default amount to use in simulations
DEFAULT_SIMULATION_USD=10000

# ============================================
# ğŸ¤– FLASHBOTS SETTINGS
# ============================================

# Flashbots relay endpoint
# Mainnet: https://relay.flashbots.net
# Goerli:  https://relay-goerli.flashbots.net
FLASHBOTS_RPC_URL=https://relay.flashbots.net

# Flashbots bundle signing key (REQUIRED for production)
# This is a SEPARATE key from your profit wallet!
# Generate with: cast wallet new
# Format: 0x... (64 hex chars)
# âš ï¸  KEEP THIS SECRET! Never share or commit!
FLASHBOTS_SIGNER_KEY=

# Miner bribe percentage (of profit)
# 90% = You keep 10% of profit, give 90% to miner/validator
# Higher bribe = faster inclusion, but less profit
# 80-95% is typical range
MINER_BRIBE_PCT=90

# ============================================
# ğŸ’³ WALLET SETTINGS
# ============================================

# Your Ethereum wallet address to receive profits
# This wallet will receive the remaining profit after miner bribe
# Format: 0x... (40 hex chars)
PROFIT_WALLET_ADDRESS=

# Executor contract address (REQUIRED for production)
# This is YOUR deployed contract that executes the arbitrage
# You'll deploy this in Phase 4
EXECUTOR_CONTRACT_ADDRESS=

# ============================================
# â±ï¸ RATE LIMITING
# ============================================

# Minimum seconds between scans
# 12 seconds = ~1 Ethereum block
# Lower = more opportunities found, but more RPC costs
SCAN_INTERVAL_SECS=12

# Maximum RPC calls per second
# Alchemy free tier: ~25/sec
# If you hit rate limits, lower this
MAX_RPC_CALLS_PER_SEC=25

# ============================================
# ğŸ›¡ï¸ SAFETY SETTINGS
# ============================================

# EMERGENCY STOP - Set to true to immediately halt all operations
# Useful if you detect issues or want to pause the bot
EMERGENCY_STOP=false

# Maximum consecutive failures before auto-pausing
# Prevents burning through RPC credits on repeated failures
MAX_CONSECUTIVE_FAILURES=5

# How long to pause after max failures (seconds)
FAILURE_PAUSE_SECS=60

